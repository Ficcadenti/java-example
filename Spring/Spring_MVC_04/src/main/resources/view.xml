<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="home" class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="WEB-INF/views/home.jsp" />
    </bean>
    
    <bean id="formTriangolo" class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="WEB-INF/views/formTriangolo.jsp" />
    </bean>
    
    <bean id="showTriangolo" class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="WEB-INF/views/showTriangolo.jsp" />
    </bean>
</beans> 